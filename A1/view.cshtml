@* Take and put this in the renderedbody *@

@{
    Layout = "~/Shared/_Layout.cshtml";
}

@{ 
    DateTime now = DateTime.Now;
    var thisDate = now.ToLongDateString();
}

@{ var activity = Request["activity"]; var time = Request["time"]; var distance = Request["distance"]; var difficulty = Request["difficulty"];} 


<div class="bodyContentDisplay">
    <table border="1" margin="1">
        <tr>
            <td>Date</td>
            <td>Activity</td>
            <td>Distance<br/>(miles)</td>
            <td>Time<br/>(minutes)</td>
            <td>Difficulty</td>
        </tr>
        <tr>
            <td>@thisDate</td>
            <td>@activity</td>
            <td>@distance</td>
            <td>@time</td>
            <td>@difficulty</td>
        </tr>

    </table>
</div>


@section sidebar{
    <div class="onTheSide">
        <ul>
            <li><a href="~/default.cshtml">Home</a></li>

            <li>
                <a href="~/log.cshtml">Log Miles</a>
            </li>
            <li>
                <a href="~/view.cshtml">View Miles</a>
            </li>
        </ul>
    </div>
}


